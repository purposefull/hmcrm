{% extends '::dashboard.html.twig' %}

{% block title %} {{ 'contact.title'|trans }} {% endblock %}

{% block body -%}
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{ 'type'|trans }}</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>{{ 'person'|trans }}</th>
                <td>{{ entity.getName }}</td>
            </tr>
            <tr>
                <th>{{ 'company'|trans }}</th>
                <td>{{ entity.getType }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions">
        <a class="btn btn-default" href="{{ path('contact_list') }}">
            {{ 'backToTheList'|trans }}
        </a>

        <a class="btn btn-default"  href="{{ path('contact_edit', { 'id': entity.id }) }}">
            {{ 'edit'|trans }}
        </a>
        {#{{ form_start(delete_form) }}#}
            {#{{ form_widget(delete_form.submit) }}#}
        {#{{ form_end(delete_form) }}#}
    </div>
{% endblock %}
