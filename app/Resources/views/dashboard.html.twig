<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>HMCRM | Dashboard</title>

    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet">

    <!-- Toastr style -->
    <link href="https://cdn.jsdelivr.net/toastr/2.1.3/toastr.min.css" rel="stylesheet">

    <!-- Gritter -->
    <link href="https://cdn.jsdelivr.net/jquery.gritter/1.7.4/css/jquery.gritter.css" rel="stylesheet">

    <link href="/css/animate.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">

</head>

<body class="pace-done mini-navbar">
<div id="wrapper">
    <nav class="navbar-default navbar-static-side" role="navigation">
        <div class="sidebar-collapse">
            <ul class="nav metismenu" id="side-menu">
                <li class="nav-header">
                    <div class="dropdown profile-element">
                        {% if app.user %}
                            <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                                <span class="clear"> <span class="block m-t-xs"> <strong
                                                class="font-bold">{{ app.user.username }}</strong>
                                 </span> <span class="text-muted text-xs block"><b class="caret"></b></span> </span>
                            </a>
                        {% endif %}
                        <ul class="dropdown-menu animated fadeInRight m-t-xs">
                            <li><a href="#">Profile</a></li>
                            {#<li><a href="{{ path('contact') }}">Contacts</a></li>#}
                            <li><a href="#">Mailbox</a></li>
                            <li class="divider"></li>
                            <li><a href="/logout">Logout</a></li>
                        </ul>
                    </div>
                    <div style="font-size: 15px; height: 60px;" class="logo-element">
                        HMCRM
                    </div>
                </li>
            </ul>
            {{ knp_menu_render('AppBundle:Builder:mainMenu', { 'currentClass': 'active' }) }}
        </div>
    </nav>

    <div id="page-wrapper" class="gray-bg dashbard-1">
        <div class="row border-bottom">
            <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
                <div class="navbar-header">
                    <a class="navbar-minimalize minimalize-styl-2 btn btn-primary " href="#"><i class="fa fa-bars"></i>
                    </a>
                    <form role="search" class="navbar-form-custom" action="#">
                        <div class="form-group">
                            <input type="text" placeholder="Search for something..." class="form-control"
                                   name="top-search" id="top-search">
                        </div>
                    </form>
                </div>
                <ul class="nav navbar-top-links navbar-right">
                    <li>
                        {#<span class="m-r-sm text-muted welcome-message">HMCRM</span>#}
                    </li>
                    <li role="presentation" class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" aria-haspopup="true"
                           aria-expanded="false" style="text-transform: uppercase">
                            {{ app.request.locale }} <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            {% set routeName = app.request.attributes.get("_route") %}
                            {% set routeParams = app.request.attributes.get("_route_params") %}
                            {% for locale in locales if locale != app.request.locale %}
                                <li>
                                    <a href="{{ path(routeName, routeParams|merge({"_locale": locale})) }}">{{ locale }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>

                    <li>
                        <a href="/logout">
                            <i class="fa fa-sign-out"></i> Log out
                        </a>
                    </li>

                </ul>
            </nav>
        </div>

        <div class="row wrapper border-bottom white-bg page-heading">
            {% block title %}{% endblock %}
        </div>

        <div class="wrapper wrapper-content animated fadeInRight ecommerce">
            {% block body %}{% endblock %}
        </div>

    </div>

    <!-- Mainly scripts -->
    {#<script src="https://cdn.jsdelivr.net/jquery/3.1.0/jquery.min.js"></script>#}
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.metismenu/2.2.0/metisMenu.min.js"></script>
    <script src="https://cdn.jsdelivr.net/slimscroll/1.3.7/jquery.slimscroll.min.js"></script>

    <!-- Flot -->
    <script src="https://cdn.jsdelivr.net/jquery.flot/0.8.3/jquery.flot.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.flot.tooltip/0.8.4/jquery.flot.tooltip.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.flot/0.8.3/jquery.flot.resize.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.flot/0.8.3/jquery.flot.pie.min.js"></script>
    <script src="/js/jquery.flot.spline.js"></script>

    <!-- Peity -->
    <script src="https://cdn.jsdelivr.net/jquery.peity/3.2.0/jquery.peity.min.js"></script>
    {#<script src="/js/peity-demo.js"></script>#}

    <!-- Custom and plugin javascript -->
    <script src="/js/inspinia.js"></script>
    <script src="https://cdn.jsdelivr.net/pace/1.0.2/pace.min.js"></script>

    <!-- jQuery UI -->
    <script src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>

    <!-- GITTER -->
    <script src="https://cdn.jsdelivr.net/jquery.gritter/1.7.4/js/jquery.gritter.min.js"></script>

    <!-- Sparkline -->
    <script src="https://cdn.jsdelivr.net/jquery.sparkline/2.1.2/jquery.sparkline.min.js"></script>

    {#<script src="js/chartjs-demo.js"></script>#}
</div>
</body>
</html>
